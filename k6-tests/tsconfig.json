{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["k6", "../packages/types"]
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules"]
} 